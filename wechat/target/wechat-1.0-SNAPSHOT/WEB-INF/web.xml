<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <!--配置核心servlet，此servlet接收并处理微信服务器发送过来的消息-->
    <servlet>
        <servlet-name>coreservlet</servlet-name>
        <servlet-class>
            com.rupeng.wechat.CoreServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>coreservlet</servlet-name>
        <url-pattern>/coreservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tagservlet</servlet-name>
        <servlet-class>
            com.rupeng.wechat.TagServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tagservlet</servlet-name>
        <url-pattern>/tagservlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>dotag</servlet-name>
        <servlet-class>
            com.rupeng.wechat.DoTagServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dotag</servlet-name>
        <url-pattern>/dotag</url-pattern>
    </servlet-mapping>


    <!-- 设置失效时间为60分钟 -->
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>
